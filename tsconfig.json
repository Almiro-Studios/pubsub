{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2017", "es7", "es6", "dom"],
    "module": "esnext",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}